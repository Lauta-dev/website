---
import projects from "../projects.json"

import Badger from "./Badger.astro";
import LinksButton from "./LinksButton.astro";
import { ExternalLink, Github } from '@lucide/astro';

---

  <section id="projects" class="py-20 px-4 bg-muted/30">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Proyectos <b class="text-accent underline">Destacados</b>
        </h2>
        <div class="w-20 h-1 bg-primary mx-auto mb-4"></div>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Una selección de proyectos que demuestran mis habilidades técnicas y
          creatividad
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {
          projects.map((p) => (
            <div class="hoverTarget flex flex-col gap-3 border-1 rounded-lg border-white/15">
              <div class="overflow-hidden rounded-t-lg">
                <img
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  src={p.img}
                  alt=""
                />
              </div>

              <div class="ml-2 mr-2 mb-2 flex flex-col gap-3">
                <h2 class="text-xl transition text-center ">
                  {p.title}
                </h2>

                <p class="text-gray-400">
                  {p.desc}
                </p>

                <div class="flex flex-row gap-2">
                  {p.stack.map((s) => (
                    <Badger value={s} />
                  ))}
                </div>

                <div class="flex w-full gap-2">
                <LinksButton
                  customStyle="flex flex-1  text-center transition gap-2 rounded-full text-white hover:bg-accent hover:text-black items-center justify-center"
                  link="https://github.com/lauta-dev"
                >
                </LinksButton>

                {
                    p.demo &&
                    <LinksButton
                        customStyle="flex flex-1 bg-transparent text-center transition gap-2 rounded-full text-white hover:bg-accent hover:text-black items-center justify-center"
                  link="https://github.com/lauta-dev"
                  
                ></LinksButton>
                }

                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
